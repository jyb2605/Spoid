<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.spoid.AutoFitTextureView
        android:id="@+id/texture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />



    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:layout_gravity="bottom"
        android:background="#436cff"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="5.5dp"
        android:paddingTop="7dp">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:gravity="center">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_list"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_marginStart="-160.8dp"
        android:layout_marginTop="10dp"
        android:gravity="center"


        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/sum"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/sum" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="합성하기"
                    android:textColor="#585858"
                    android:textSize="5.5sp" />
            </LinearLayout>

            <View
                android:layout_width="0.4dp"
                android:layout_height="match_parent"
                android:background="#979797" />

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/quest"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/quest" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="퀘스트"
                    android:textColor="#585858"
                    android:textSize="5.5sp" />
            </LinearLayout>

            <View
                android:layout_width="0.4dp"
                android:layout_height="match_parent"
                android:background="#979797" />

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/dogam"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/dogam" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="나의 도감"
                    android:textColor="#585858"
                    android:textSize="5.5sp" />
            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/indicator"
            android:layout_width="20dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:background="@drawable/indicator_selector"

            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="216dp"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_rectangle"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Finding List"
            android:textAlignment="center"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#979797" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            >

            <com.spoid.RecognitionScoreView
                android:id="@+id/results"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
                android:padding="10dp" />

            <!--<com.spoid.RecognitionScoreView-->
            <!--android:id="@+id/results"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_weight="10"-->
            <!--android:padding="10dp" />-->


            <ListView
                android:id="@+id/resultsListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:padding="10dp"
                tools:listitem="@layout/result_item" />


        </LinearLayout>

    </LinearLayout>


</FrameLayout>
