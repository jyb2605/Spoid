<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#585858"
            android:gravity="center_horizontal"
            android:layout_marginTop="68dp"
            android:layout_marginLeft="83.5dp"
            android:text="아이템 선택하기" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#585858"
            android:gravity="center_horizontal"
            android:layout_toEndOf="@+id/txt1"
            android:layout_marginTop="68dp"
            android:layout_marginLeft="475dp"
            android:text="도구 선택하기"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"

        >


        <LinearLayout
            android:id="@+id/element1"
            android:orientation="vertical"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:background="@drawable/gray_border"
            android:layout_marginLeft="79dp">
       
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/btn_add"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="72dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#585858"
                android:lineSpacingExtra="2.5sp"
                android:gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:layout_gravity="center_horizontal"
                android:text="조합하고 싶은 아이템을\n골라 넣어주세요."/>
       
        </LinearLayout>

        <LinearLayout
            android:id="@+id/element2"
            android:orientation="vertical"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:background="@drawable/gray_border"
            android:layout_marginLeft="36dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/btn_add"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="72dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#585858"
                android:lineSpacingExtra="2.5sp"
                android:gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:layout_gravity="center_horizontal"
                android:text="조합하고 싶은 아이템을\n골라 넣어주세요."/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="240dp"
            android:layout_marginLeft="60dp"
            android:orientation="vertical"
            android:background="@drawable/gray_border">


            <ImageView
                android:id="@+id/up"
                android:layout_width="match_parent"
                android:layout_height="17.5dp"
                app:srcCompat="@drawable/btn_add" />

            <ListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="205dp"
                android:scrollbars="none" />

            <ImageView
                android:id="@+id/down"
                android:layout_width="match_parent"
                android:layout_height="17.5dp"
                app:srcCompat="@drawable/btn_add" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
