<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="270dp"
    android:layout_height="180dp"
    android:layout_gravity="center"
    android:background="@layout/text_background"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:backgroundTint="#4369fe"
        android:background="@layout/text_background"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:text="알림"
            android:textSize="13sp"
            android:textColor="#ffffff"
            android:textAlignment="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">


        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:orientation="vertical">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/group_7"
            />

            <TextView
                android:id="@+id/cmp_1"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:textSize="10sp"
                android:text="나무"
                android:textAlignment="center" />

        </LinearLayout>

        <TextView
            android:layout_width="10sp"
            android:layout_height="10sp"
            android:text="+"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:orientation="vertical">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/group_15"/>
        <TextView
            android:id="@+id/cmp_2"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:textSize="10sp"
            android:text="종이"
            android:textAlignment="center" />
        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="7dp"
            >
        <TextView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:text="두 아이템을 "
            android:textSize="10dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/cmp_tool"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:text="망치"
            android:textSize="10dp"
            android:textStyle="bold"
            android:gravity="center"
            />
            <TextView
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:text="을(를) 이용하여 조합하시겠습니까?"
                android:textSize="10dp"
                android:gravity="center"/>

        </LinearLayout>
    <Button
        android:layout_width="65dp"
        android:layout_height="25dp"
        android:background="@drawable/cmp_selector"
        android:layout_gravity="center"/>
    </LinearLayout>

</RelativeLayout>