<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="475dp"
    android:layout_height="180dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#ffffff">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="475dp"
            android:layout_height="180dp"
            android:background="@layout/text_background"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/def_img"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_margin="10dp">

            </ImageView>

            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:gravity="left"
                    android:textColor="@android:color/black"
                    android:textSize="30sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20sp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_cmb"
                        android:layout_width="25dp"
                        android:layout_height="15sp"
                        android:gravity="left"
                        android:text="조합"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="10sp"
                        android:layout_marginRight="2dp"/>

                    <!-- 조합-->

                    <TextView
                        android:id="@+id/txt_content1_1"
                        android:layout_width="25dp"
                        android:layout_height="20sp"
                        android:textColor="@android:color/black"
                        android:textSize="10sp" />
                    <TextView
                        android:id="@+id/txt_"
                        android:layout_width="10sp"
                        android:layout_height="10sp"
                        android:textColor="@android:color/black"
                        android:textSize="10sp"
                        android:text="+"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"/>
                    <TextView
                        android:id="@+id/txt_content1_2"
                        android:layout_width="25dp"
                        android:layout_height="20sp"
                        android:textColor="@android:color/black"
                        android:textSize="10sp"
                        />

                    <TextView
                        android:id="@+id/txt__"
                        android:layout_width="10sp"
                        android:layout_height="10sp"
                        android:textColor="@android:color/black"
                        android:textSize="10sp"
                        android:text="|"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"/>

                    <TextView
                        android:id="@+id/txt_tool"
                        android:layout_width="20sp"
                        android:layout_height="15sp"
                        android:text="도구"
                        android:textColor="@android:color/black"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:id="@+id/txt_content1_3"
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:textColor="@android:color/black"
                        android:textSize="10sp"
                        android:layout_marginRight="2dp"/>


                </LinearLayout>

                <TextView
                    android:id="@+id/txt_def"
                    android:layout_width="match_parent"
                    android:layout_height="15sp"
                    android:layout_marginTop="4sp"
                    android:gravity="left"
                    android:text="정의"
                    android:textColor="@android:color/black"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    />

                <!-- 정의-->
                <TextView
                    android:id="@+id/txt_content2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="2dp"
                    android:gravity="left"
                    android:textColor="@android:color/black"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/txt_content3"
                    android:layout_width="match_parent"
                    android:layout_height="10sp"
                    android:textColor="@android:color/black"
                    android:textSize="7sp"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="9dp"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_dicomp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:background="@layout/text_background"
                android:backgroundTint="@color/colorPrimary"
                android:text="분해하기"
                android:textColor="#ffffff"
                android:textStyle="bold"/>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>


